/* pages/index/index.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 50rpx; 
  box-sizing: border-box;
  position: relative;
} 
.text {
  margin-top: 50rpx;
  font-size: 0.9rem;
  color: #7c7cde;
}
.br10 {
  border-radius: 10rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

button {
  margin: 10px;
  width: 100%;
}

.open-setting {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
}

.open-setting button {
  width: 365rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;

}