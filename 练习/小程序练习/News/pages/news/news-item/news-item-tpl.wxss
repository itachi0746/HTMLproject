.post-container{
    flex-direction:column;
    display:flex;
    padding:16rpx;
    background-color:#fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
   
}
.post-area{
   flex-direction:row;
   display:flex;
 }
.post-area .post-image{width:160rpx;height:160rpx;}
.post-area .text-area{flex:1;padding-left:20rpx;height:160rpx;position:relative}
.post-area .title{font-size:30rpx;color:#333;}
.post-text{
    color:#666;
    font-size:26rpx;
    margin-bottom:20rpx;

    letter-spacing:2rpx;
    line-height: 40rpx;
    overflow:hidden; 
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;

  

}
.post-like{
    display:flex;
    flex-direction: row;
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
    align-items: center;
    position:absolute;bottom:0;left:0rpx
}

.post-like image{
    height:16px;
    width:16px;
    margin-right: 8px;
}

.post-like text{
    margin-right: 20px;
}
